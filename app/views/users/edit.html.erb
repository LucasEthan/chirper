<% content_for :page, "Edit Profile" %>
<h1>Edit profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user, submit_text: "Save changes" %>
    <div class="gravatar_edit">
      <%= gravatar_for(@user) %>
      <%= link_to "Change avatar", "https://gravatar.com/emails", target: "_blank", rel: "noopener" %>
    </div>
  </div>
</div>
