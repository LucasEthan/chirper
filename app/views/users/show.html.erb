<% content_for :page, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
     <h1>
      <%= gravatar_for(@user) %>
      <%= @user.name %>
     </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats", user: @user %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render("follow_form", user: @user) if logged_in? %>
    <% if @user.chirps.any? %>
      <h3><%= pluralize(@user.chirps.count, "chirp") %></h3>
      <ol class= "chirps">
        <%= render @chirps %>
      </ol>
      <%= will_paginate @chirps %>
    <% end %>
  </div>
</div>

<p><strong>Name:</strong> <%= @user.name %></p>
<p><strong>Email:</strong> <%= @user.email %></p> 
<p><strong>Created at:</strong> <%= @user.created_at %></p>