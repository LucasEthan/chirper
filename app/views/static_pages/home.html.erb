    <aside class= "col-md-4">
      <section class= "user_info">
        <%= render "shared/user_info" %>
        <section class= "chirp_form">
          <%= render "shared/chirp_form", chirp: @chirp %>
        </section>
      </section>
    </aside>
  </div>
<% else %>
  <%= render "hero_section" %>
<% end %>

