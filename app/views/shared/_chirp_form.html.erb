<div class= "col-md-6 col-md-offset-3">
  <%= form_with(model: chirp, local: true) do |f| %>
    <%= render "shared/error_messages", model: f.object %>
    <div class= "field">
      <%= f.text_area :content, autofocus: true, placeholder: "Compose new chirp" %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
</div>