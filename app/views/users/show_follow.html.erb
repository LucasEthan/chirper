<% content_for :page, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <%= link_to(gravatar_for(@user), @user) %>
    <h1><%= @user.name %></h1>
    <span>
      <%= link_to "View my profile", @user %>
    </span>
    <span>
      <strong>Chirps: </strong><%= @user.chirps.count %>
    </span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <div class="user_avatars">
        <%= render partial: "user_avatar", collection: @users, as: "user" %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.present? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %> 
  </div>  
</div>